<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/card"
    android:orientation="horizontal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <nl.simyo.goodbyejeroenandroid.CustomFontTextView
        android:id="@+id/word_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight="70"
        android:gravity="left|center_vertical"
        android:text="Name"
        android:textColor="#005D77"
        android:textSize="17dp"
        app:custom_font="fonts/Helvetica-Regular.ttf" />

    <ImageView
        android:id="@+id/word_incremeneter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/plus" />

    <nl.simyo.goodbyejeroenandroid.CustomFontTextView
        android:id="@+id/word_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/word_incremeneter"
        android:layout_weight="70"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:text="20000"
        android:textColor="#005D77"
        android:textSize="30dp"
        app:custom_font="fonts/Helvetica-Regular.ttf" />


</RelativeLayout>